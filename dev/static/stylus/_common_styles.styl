.sandwich
  position relative
  display inline-block
  vertical-align middle
  width 50px
  height 50px
  margin-right 15px
  border 2px solid #fff
  border-radius 50px
  cursor pointer

  &.active
    .sandwich-line--top
      top 21px
      transform rotate(45deg)

    .sandwich-line--middle
      opacity 0

    .sandwich-line--bottom
      top 21px
      transform rotate(-45deg)

.sandwich-line
  position absolute
  left 50%
  margin-left -12.5px
  display block
  height 4px
  width 25px
  background-color #fff
  transition all linear .3s

.sandwich-line--top
  top 13px

.sandwich-line--middle
  top 21px
  opacity 1

.sandwich-line--bottom
  top 29px

.g-btn
  display inline-block
  padding 0 20px
  height 30px
  line-height 28px
  border 1px solid #fff
  border-radius 20px
  color #fff
  cursor pointer
  background-color mainColor
  transition all linear .3s

  &:hover
    background-color #fff
    color mainColor

.g-section-title
  margin-bottom 30px
  font-size 42px
  text-align center
  color mainColor
  font-family titleFont

  &.g-section-title--white
    color #fff

.instagram-text
  font-size 24px
  font-family boldFont
  position relative
  display inline-block

  color mainColor

  &:before
    display inline-block
    vertical-align middle
    margin-right 15px
    width 35px
    height 35px
    content ''
    background url("../img/svg/instagram.svg") 0 0 no-repeat
