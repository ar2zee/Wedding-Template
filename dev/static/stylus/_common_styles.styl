.sandwich
  position relative
  display inline-block
  vertical-align middle
  width 50px
  height 50px
  margin-right 15px
  border 2px solid #fff
  border-radius 50px

.sandwich-line
  position absolute
  left 50%
  margin-left -12.5px
  display block
  height 4px
  width 25px
  background-color #fff

.sandwich-line--top
  top 13px

.sandwich-line--middle
  top 21px

.sandwich-line--bottom
  top 29px

.g-btn
  display inline-block
  padding 0 20px
  height 30px
  line-height 28px
  border 1px solid #fff
  border-radius 20px
  color #fff
  cursor pointer
  background-color mainColor
  transition all linear .3s

  &:hover
    background-color #fff
    color mainColor
