.price
	background  url('../img/general/price-bg.jpg') 0 0 no-repeat
	
.price-item__wrap
	display flex
	justify-content space-around
	 flex-wrap wrap
		
.price-item
	width 30%
	padding 20px 20px 30px
	margin-bottom 30px
	border-radius 10px
	text-align center
	color mainColor
	line-height 1.2
	display  flex
	flex-direction column
	justify-content space-between
	
.price-item--level1
	background  url("../img/general/level/level1.jpg") 0 0 no-repeat
	background-size cover
.price-item--level2
	background  url("../img/general/level/level2.jpg") 0 0 no-repeat
	background-size cover
.price-item--level3
	background  url("../img/general/level/level3.jpg") 0 0 no-repeat
	background-size cover
	
.price__title
	display block
	font-size 24px
	font-family boldFont
	text-transform uppercase
	
	&:after
		content ''
		display block
		width 260px
		height 1px
		background-color mainColor
		margin 20px auto
		
.price-descr
	margin-bottom 10px
	
.price-list
	margin-bottom 20px
	
	li
		margin-bottom 5px
		
.price-number
	width 100%
	max-width 260px
	margin 0 auto
	height 60px
	line-height 60px
	background  url("../img/general/price-bg.png") 0 0 no-repeat
	font-size 42px
	color #fff
	font-family boldFont


.price-order
	text-align center
	color #fff
	
	p
		font-size 28px
		margin-bottom 30px
		a
			font-family boldFont
			color #fff

