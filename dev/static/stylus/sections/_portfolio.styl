.portfolio-item__wrap
	width 100%
	max-width 975px
	margin 0 auto
	display flex
	flex-wrap wrap

.portfolio-item
		position relative
		width 292px
		height 230px
		background-size cover
		cursor pointer
		
		&.portfolio-item--width
			width 390px
			
		&:hover
			.portfolio-item__descr
				opacity 1
			
.portfolio-item-search
	position absolute
	width 25px
	height 25px
	right 10px
	bottom 10px
	background-color: mainColor
	border 1px solid #fff
	border-radius 50%
	z-index 1

	&:after
		content ''
		position absolute
		left 5px
		top 5px
		display block
		width 12px
		height 12px
		background  url("../img/svg/search.svg") 0 0 no-repeat
		background-size 100%

.portfolio-item__descr
	position absolute
	bottom 0
	left 0
	right 0
	padding 15px 40px 15px 10px
	background-color mainColor
	color #fff
	text-align right
	opacity 0
	transition all linear .3s









